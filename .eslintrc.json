{
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "react"],
	"rules": {
		"quotes": ["error", "double"],
		"no-use-before-define": "off",
		"eol-last": ["error", "always"],
		"react/no-unknown-property": "off"
	},
	"settings": {
		"import/resolver": {
			"typescript": {
				"project": "tsconfig.json"
			}
		}
	}
}
